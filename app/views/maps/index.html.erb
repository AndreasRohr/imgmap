<div>
  <h1>Maps</h1>
  <br>
  <div style="display: flex; flex-direction: row; flex-wrap: wrap">
    <% @maps.each do |map| %>
      <%= link_to map, style: 'color: black; text-decoration: none' do %>
        <div class="card" style="width: 200px; height: 200px; display: flex; justify-content: center; text-align: center; align-items: center; border: 3px solid black; margin: 15px;">
          <!-- card content goes here -->
          <%= map.title %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div style="position: absolute; top: 10px; right: 10px">
    <%= button_to 'New Map', new_map_path, method: :get, class: 'btn btn-primary custom-button' %>
  </div>
</div>