<h1>Maps</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @maps.each do |map| %>
    <tr>
      <td><%= map.title %></td>
      <td><%= map.lat %></td>
      <td><%= map.lng %></td>
      <td><%= link_to 'Show', map %></td>
      <td><%= link_to 'Edit', edit_map_path(map) %></td>
      <td><%= link_to 'Destroy', map_path(map), data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure?"
      } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Map', new_map_path %>